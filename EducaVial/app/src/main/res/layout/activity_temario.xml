<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TemarioActivity"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/scroll_desc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/learnt_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/forma_boton_temario_1"
                android:fontFamily="@font/overpass"
                android:text="@string/learnt_trafic_sign"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/theme_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/forma_boton_temario_2"
                android:fontFamily="@font/overpass"
                android:text="@string/theme_1"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/theme_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/forma_boton_temario_2"
                android:fontFamily="@font/overpass"
                android:text="@string/theme_2"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/theme_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/forma_boton_temario_2"
                android:fontFamily="@font/overpass"
                android:text="@string/theme_3"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/theme_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/forma_boton_temario_2"
                android:fontFamily="@font/overpass"
                android:text="@string/theme_4"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/theme_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/forma_boton_temario_2"
                android:fontFamily="@font/overpass"
                android:text="@string/theme_5"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/theme_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/forma_boton_temario_2"
                android:fontFamily="@font/overpass"
                android:text="@string/theme_6"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/theme_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/forma_boton_temario_2"
                android:fontFamily="@font/overpass"
                android:text="@string/theme_7"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>