<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FunctionalButtons">
        <item name="android:textColor">@color/colorFuncButtonTxt</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
    </style>

    <style name="EqualButtons">
        <item name="android:textColor">@color/colorEqlButtonTxt</item>
        <item name="android:background">@drawable/rounded_equal_rectangle</item>
    </style>


</resources>